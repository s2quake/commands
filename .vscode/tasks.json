{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build --framework net7.0",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet clean",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish: invoke",
            "command": "dotnet publish ./JSSoft.Library.Commands/JSSoft.Library.Commands.Invoke/JSSoft.Library.Commands.Invoke.csproj --self-contained false --framework net7.0 -p:PublishSingleFile=true",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish: parse",
            "command": "dotnet publish ./JSSoft.Library.Commands/JSSoft.Library.Commands.Parse/JSSoft.Library.Commands.Parse.csproj --self-contained false --framework net7.0 -p:PublishSingleFile=true",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish: repl",
            "command": "dotnet publish ./JSSoft.Library.Commands/JSSoft.Library.Commands.Repl/JSSoft.Library.Commands.Repl.csproj --self-contained false --framework net7.0 -p:PublishSingleFile=true",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}